<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cattleapplication.DashboardController">
    <Label text="Welcome to the Cattle Management System Dashboard" layoutX="50" layoutY="30" style="-fx-font-size: 18px;" />

    <!-- Add buttons for various dashboard functionalities -->

    <Button fx:id="registerCattleButton" layoutX="50" layoutY="80" onAction="#handleRegisterCattle" text="Register Cattle" />

    <Button layoutX="200" layoutY="80" onAction="#handleViewCattle" text="View Cattle" />

    <Button layoutX="50" layoutY="130" onAction="#handleSubmitClaim" text="Submit Insurance Claim" />

    <Button layoutX="200" layoutY="130" onAction="#handleViewInsuranceStatus" text="View Insurance Status" />

    <Button fx:id="viewInsurancePoliciesButton" layoutX="50" layoutY="180" onAction="#handleViewInsurancePolicies" text="View Insurance Policies" />

    <Button layoutX="200" layoutY="180" onAction="#handleLogout" text="Logout" />
</AnchorPane>
