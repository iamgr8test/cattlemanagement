<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cattleapplication.LoginController">
    <Label text="Login" layoutX="200" layoutY="20" style="-fx-font-size: 18px;" />

    <Label text="Username:" layoutX="50" layoutY="60" />
    <TextField fx:id="usernameField" layoutX="120" layoutY="60" />

    <Label text="Password:" layoutX="50" layoutY="100" />
    <PasswordField fx:id="passwordField" layoutX="120" layoutY="100" />

    <Button text="User Login" layoutX="120" layoutY="140" onAction="#loginUser" />
    <Button text="Admin Login" layoutX="220" layoutY="140" onAction="#loginAdmin" /> <!-- New Admin Login Button -->

    <Button text="Register" layoutX="170" layoutY="180" onAction="#openRegistration" />

    <!-- Error message label -->
    <Label fx:id="errorLabel" layoutX="120" layoutY="220" style="-fx-text-fill: red;" />
</AnchorPane>
