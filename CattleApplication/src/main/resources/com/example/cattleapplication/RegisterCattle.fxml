<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cattleapplication.RegisterCattleController">
    <Label text="Register Cattle" layoutX="200" layoutY="20" style="-fx-font-size: 18px;" />

    <Label text="Cattle Type:" layoutX="50" layoutY="60" />
    <ComboBox fx:id="cattleTypeField" layoutX="150" layoutY="60" />

    <Label text="Breed:" layoutX="50" layoutY="100" />
    <ComboBox fx:id="breedField" layoutX="150" layoutY="100" />

    <Label text="Age:" layoutX="50" layoutY="140" />
    <TextField fx:id="ageField" layoutX="150" layoutY="140" />

    <Label text="Weight:" layoutX="50" layoutY="180" />
    <TextField fx:id="weightField" layoutX="150" layoutY="180" />

    <Label text="Health Status:" layoutX="50" layoutY="220" />
    <ComboBox fx:id="healthStatusField" layoutX="150" layoutY="220" />

    <Label text="Owner's Name:" layoutX="50" layoutY="260" />
    <TextField fx:id="ownerNameField" layoutX="150" layoutY="260" />

    <Label text="Additional Info:" layoutX="50" layoutY="300" />
    <TextArea fx:id="additionalInfoField" layoutX="150" layoutY="300" prefHeight="40" prefWidth="200" />

    <Button text="Submit" layoutX="150" layoutY="360" onAction="#handleSubmit" />
    <Button text="Back to Dashboard" layoutX="250" layoutY="360" onAction="#goBackToDashboard" />
</AnchorPane>
