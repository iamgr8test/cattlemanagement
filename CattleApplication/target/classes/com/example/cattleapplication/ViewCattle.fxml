<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cattleapplication.ViewCattleController">

    <TableView fx:id="cattleTable">
        <columns>
            <TableColumn fx:id="cattleIdColumn" text="Cattle ID"/>
            <TableColumn fx:id="cattleTypeColumn" text="Cattle Type"/>
            <TableColumn fx:id="breedColumn" text="Breed"/>
            <TableColumn fx:id="ageColumn" text="Age"/>
            <TableColumn fx:id="weightColumn" text="Weight"/>
            <TableColumn fx:id="healthStatusColumn" text="Health Status"/>
        </columns>
    </TableView>

    <!-- Back to Dashboard Button -->
    <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>

</VBox>
