<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cattleapplication.UserRegistrationController"
          hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Farmer Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1"/>

    <Label text="Location:" GridPane.rowIndex="1"/>
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Username:" GridPane.rowIndex="2"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password:" GridPane.rowIndex="3"/>
    <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Register" onAction="#registerUser" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button text="Back to Login" onAction="#goToLogin" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
